<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.BeJuRyu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_confirm_negative_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button"
            android:layout_marginTop="32dp"
            android:textColor="@color/purple"
            android:text="@string/no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_confirm_positive_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_confirm_textView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_confirm_positive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/white"
            android:text="@string/yes"
            android:backgroundTint="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialog_confirm_negative_button"
            app:layout_constraintTop_toBottomOf="@+id/dialog_confirm_textView" />

        <TextView
            android:id="@+id/dialog_confirm_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="로그아웃 하시겠습니까?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>